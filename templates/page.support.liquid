{% comment %} Custom Support Page Template {% endcomment %}
{{ 'support.css' | asset_url | stylesheet_tag }}

<div class="support-navbar">
    <ul>
        <li><a href="#" class="tab-link" data-tab="customer-support">Customer Support</a></li>
        <li><a href="#" class="tab-link" data-tab="shipping-returns">Shipping & Returns</a></li>
        <li><a href="#" class="tab-link" data-tab="size-guide">Size Guide</a></li>
        <li><a href="#" class="tab-link" data-tab="legal">Legal</a></li>
        <li><a href="#" class="tab-link" data-tab="accessibility">Accessibility</a></li>
    </ul>
</div>

<div class="support-content">
    {% section 'customer-support' %}
    {% render 'shipping-returns' %}
    {% render 'size-guide' %}
    {% render 'legal' %}
    {% render 'accessibility' %}
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const tabLinks = document.querySelectorAll(".tab-link");
        const tabContents = document.querySelectorAll(".tab-content");
    
        tabLinks.forEach(link => {
            link.addEventListener("click", function (event) {
                event.preventDefault();
    
                // Get the selected tab
                let selectedTab = this.getAttribute("data-tab");
    
                // Hide all content sections
                tabContents.forEach(content => {
                    content.style.display = "none";
                });
    
                // Show the selected content section
                document.getElementById(selectedTab).style.display = "block";
            });
        });
    
        // Set default active tab (first tab)
        if (tabContents.length > 0) {
            tabContents.forEach(content => content.style.display = "none"); // Hide all initially
            tabContents[0].style.display = "block"; // Show only the first one
        }
    });
    
    
</script>