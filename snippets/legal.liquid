<style>
    /* Legal Page Container */
.legal-container {
    max-width: 1200px;
    margin: auto;
    padding: 50px 20px;
    font-family: Arial, sans-serif;
}

/* Headings */
.legal-container h2 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

/* Legal Item (Dropdown) */
.legal-item {
    border-bottom: 1px solid #ddd;
    padding: 10px 0;
}
.legal-title {
    width: 100%;
    text-align: left;
    font-size: 16px;
    font-weight: bold;
    background: none;
    border: none;
    padding: 15px 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.legal-title .arrow {
    transition: transform 0.3s ease;
}

/* Hidden Content */
.legal-content {
    display: none;
    padding: 10px 0;
    font-size: 14px;
}

/* Expand Animation */
.legal-item.active .legal-content {
    display: block;
}
.legal-item.active .arrow {
    transform: rotate(180deg);
}

/* Mobile Optimization */
@media (max-width: 768px) {
    .legal-container {
        padding: 20px;
    }
    .legal-title {
        font-size: 14px;
    }
}

</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const legalTitles = document.querySelectorAll(".legal-title");
    
        legalTitles.forEach(title => {
            title.addEventListener("click", function () {
                const parent = this.parentElement;
                parent.classList.toggle("active");
    
                // Close other sections
                document.querySelectorAll(".legal-item").forEach(item => {
                    if (item !== parent) {
                        item.classList.remove("active");
                    }
                });
            });
        });
    });
    
</script>